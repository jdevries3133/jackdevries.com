{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "cypress": "cypress run",
    "dev": "yarn prisma:deploy && yarn build:tailwind && concurrently --names remix,tailwind \"PORT=8000 node --inspect=0.0.0.0:9229 ./node_modules/.bin/remix dev --sourcemap\" \"yarn build:tailwind --watch\"",
    "cypress:dev": "cypress open --browser chrome --e2e",
    "production": "yarn prisma:deploy && PORT=8000 remix-serve build",
    "build:all": "yarn build:tailwind && yarn prisma:generate && remix build",
    "build:tailwind": "tailwindcss -i styles/tailwind.css -o app/tailwind.css",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "postinstall": "remix setup node",
    "test": "vitest",
    "debug-test": "NO_COLORS=true node --inspect-brk=0.0.0.0 ./node_modules/.bin/vitest --threads=false",
    "typecheck": "tsc -b app && tsc -b cypress",
    "prettiercheck": "prettier --check app cypress",
    "fmt": "prettier --write app cypress"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^1.0.6",
    "@mdx-js/rollup": "^2.1.2",
    "@prisma/client": "^3.9.1",
    "@remix-run/dev": "^1.13.0",
    "@remix-run/node": "^1.13.0",
    "@remix-run/react": "^1.13.0",
    "@remix-run/serve": "^1.13.0",
    "@types/nodemailer": "^6.4.6",
    "accept-language-parser": "^1.5.0",
    "concurrently": "^7.0.0",
    "fuse.js": "^6.6.2",
    "highlight.js": "^11.6.0",
    "nodemailer": "^6.8.0",
    "prisma": "^3.9.1",
    "react": "18",
    "react-dom": "18",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-highlight": "^5.0.2",
    "rehype-slug": "^5.0.1",
    "rehype-toc": "^3.0.2",
    "remix": "^1.13.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@types/accept-language-parser": "^1.5.3",
    "@types/mdx": "^2.0.1",
    "@types/react": "18",
    "@types/react-dom": "18",
    "@vitejs/plugin-react": "^1.3.2",
    "cypress": "^9.7.0",
    "happy-dom": "^4.0.1",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.0.17",
    "typescript": "4.9",
    "vite-tsconfig-paths": "^4.0.5",
    "vitest": "^0.12.9"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "version": "0.0.0"
}
